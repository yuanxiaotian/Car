<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".ui.homePage.allCar.BusinessInfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout style="@style/a_line_style">
            <TextView
                style="@style/a_line_style_text_light"
                android:text="@string/Business_name" />
            <TextView
                android:id="@+id/Business_name"
                style="@style/a_line_style_text_light2" />
        </LinearLayout>

        <View
            style="@style/line"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"/>

        <LinearLayout style="@style/a_line_style">
            <TextView
                style="@style/a_line_style_text_light"
                android:text="@string/car_plate_num" />
            <TextView
                android:id="@+id/car_plate_num"
                style="@style/a_line_style_text2" />
        </LinearLayout>

        <View
            style="@style/line"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"/>

        <LinearLayout style="@style/a_line_style">
            <TextView
                style="@style/a_line_style_text_light"
                android:text="@string/car_type" />
            <TextView
                android:id="@+id/car_type"
                style="@style/a_line_style_text_light2" />
        </LinearLayout>

        <View
            style="@style/line"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"/>

        <LinearLayout style="@style/a_line_style">
            <TextView
                style="@style/a_line_style_text_light"
                android:text="@string/Brand_model" />
            <TextView
                android:id="@+id/Brand_model"
                style="@style/a_line_style_text_light2" />
        </LinearLayout>

        <View
            style="@style/line"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"/>
        <LinearLayout style="@style/a_line_style">
            <TextView
                style="@style/a_line_style_text_light"
                android:text="@string/tonnage" />
            <TextView
                android:id="@+id/tonnage"
                style="@style/a_line_style_text_light2" />
        </LinearLayout>

        <View
            style="@style/line"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"/>

        <LinearLayout style="@style/a_line_style">
            <TextView
                style="@style/a_line_style_text_light"
                android:text="@string/tpdate" />
            <TextView
                android:id="@+id/tpdate"
                style="@style/a_line_style_text_light2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:background="@color/content_bg"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/Taxi_License_photo"
                android:textColor="@color/font_light_gery"
                android:textSize="16sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:orientation="horizontal">
                <RelativeLayout
                    android:id="@+id/yy_Operation_z"
                    style="@style/Sketch_map_layout2">
                    <ImageView
                        android:id="@+id/yy_Operation_z_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/add_default_photo"
                        android:contentDescription="@string/image"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/rounded_rectangle"
                        android:gravity="center"
                        android:text="@string/Positive_operation_certificate"
                        android:textColor="@android:color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/yy_Operation_f"
                    style="@style/Sketch_map_layout2">
                    <ImageView
                        android:id="@+id/yy_Operation_f_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/add_default_photo"
                        android:contentDescription="@string/image"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/rounded_rectangle"
                        android:gravity="center"
                        android:text="@string/Opposite_of_operation"
                        android:textColor="@android:color/white" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginTop="10dp"
                android:baselineAligned="true"
                android:orientation="horizontal">
                <RelativeLayout
                    android:id="@+id/yy_Fire_Extinguisher"
                    style="@style/Sketch_map_layout2">
                    <ImageView
                        android:id="@+id/yy_Fire_Extinguisher_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/add_default_photo"
                        android:contentDescription="@string/image"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/rounded_rectangle"
                        android:gravity="center"
                        android:text="@string/degree_fire_extinguisher"
                        android:textColor="@android:color/white" />
                </RelativeLayout>

                <RelativeLayout
                    style="@style/Sketch_map_layout2"
                    android:visibility="invisible">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/add_default_photo"
                        android:contentDescription="@string/image"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/rounded_rectangle"
                        android:gravity="center"
                        android:textColor="@android:color/white" />
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>