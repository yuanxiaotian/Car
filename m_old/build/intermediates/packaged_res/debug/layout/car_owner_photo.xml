<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/photograph_pager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_e8"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".ui.homePage.infoRegister.carReg.CarOwnerPhoto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/idCartOwnerPhoto_z"
            style="@style/Sketch_map_layout"
            android:layout_marginTop="0dp">

            <ImageView
                android:id="@+id/idCartOwnerPhoto_z_img"
                style="@style/corner_imageView"
                android:contentDescription="@string/image" />

            <TextView
                style="@style/Sketch_map_text_tip"
                android:text="@string/Positive_identity_card" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/idCarOwnerPhoto_f"
            style="@style/Sketch_map_layout">

            <ImageView
                android:id="@+id/idCarOwnerPhoto_f_img"
                style="@style/corner_imageView"
                android:contentDescription="@string/image" />

            <TextView
                style="@style/Sketch_map_text_tip"
                android:text="@string/opposite_idCard" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/TempCarOwnerPhoto_z"
            style="@style/Sketch_map_layout">

            <ImageView
                android:id="@+id/TempCarOwnerPhoto_z_img"
                style="@style/corner_imageView"
                android:contentDescription="@string/image" />

            <TextView
                style="@style/Sketch_map_text_tip"
                android:text="@string/Temp_residence_permit" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/TempCarOwnerPhoto_F"
            style="@style/Sketch_map_layout"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/TempCarOwnerPhoto_F_img"
                style="@style/corner_imageView"
                android:contentDescription="@string/image" />

            <TextView
                style="@style/Sketch_map_text_tip"
                android:text="@string/Temp_residence_permit_opposite" />
        </RelativeLayout>

    </LinearLayout>

</ScrollView>
