<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/c_w"
    android:padding="8dp">

    <TextView
        android:id="@+id/stime_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/zhi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/stime_text"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:layout_toEndOf="@+id/stime_text"
        android:layout_toRightOf="@+id/stime_text"
        android:text="@string/to" />

    <TextView
        android:id="@+id/dealtime_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/zhi"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/zhi"
        android:layout_toRightOf="@+id/zhi" />

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/dealtime_text"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sale" />

        <TextView
            android:id="@+id/salername_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp" />

        <TextView
            android:id="@+id/status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"

            android:textColor="#D3AD29" />
    </LinearLayout>

    <TextView
        android:id="@+id/ordernum_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stime_text"
        android:text="@string/Sales_order" />

    <TextView
        android:id="@+id/ordernum_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ordernum_title"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/ordernum_title"
        android:layout_toRightOf="@+id/ordernum_title" />

    <TextView
        android:id="@+id/client_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ordernum_title"
        android:layout_alignStart="@+id/ordernum_title"
        android:layout_below="@+id/ordernum_title"
        android:layout_marginTop="10dp"
        android:text="@string/Customer" />

    <TextView
        android:id="@+id/client_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/client_title"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/client_title"
        android:layout_toRightOf="@+id/client_title" />

    <TextView
        android:id="@+id/dealtype_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/client_title"
        android:layout_alignStart="@+id/client_title"
        android:layout_below="@+id/client_title"
        android:layout_marginTop="10dp"
        android:text="@string/Transaction_type" />

    <TextView
        android:id="@+id/dealtype_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/dealtype_title"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/dealtype_title"
        android:layout_toRightOf="@+id/dealtype_title" />

    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/dealtype_title"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Transaction_price"
            android:textColor="@color/green" />

        <TextView
            android:id="@+id/dealprice_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:textColor="@color/green" />
    </LinearLayout>
</RelativeLayout>
