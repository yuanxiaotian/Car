<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/car_plate_title"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/car_plate"/>
        <TextView
            android:id="@+id/car_plate"
            android:layout_toRightOf="@+id/car_plate_title"
            android:layout_alignTop="@+id/car_plate_title"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ç²¤A123456"/>
        <TextView
            android:id="@+id/document_num_title"
            android:layout_toRightOf="@+id/car_plate"
            android:layout_alignTop="@+id/car_plate"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/document_num"/>
        <TextView
            android:id="@+id/document_num"
            android:layout_toRightOf="@+id/document_num_title"
            android:layout_alignTop="@+id/document_num_title"
            android:layout_marginLeft="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5674446874461568"/>
        <TextView
            android:id="@+id/pay_money_title"
            android:layout_below="@+id/car_plate_title"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pay_money"/>
        <TextView
            android:id="@+id/pay_money"
            android:layout_toRightOf="@+id/pay_money_title"
            android:layout_alignTop="@+id/pay_money_title"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"/>
        <TextView
            android:id="@+id/pay_status_title"
            android:layout_toRightOf="@+id/pay_money"
            android:layout_alignTop="@+id/pay_money"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pay_status"/>
        <TextView
            android:id="@+id/pay_status"
            android:layout_toRightOf="@+id/pay_status_title"
            android:layout_alignTop="@+id/pay_status_title"
            android:layout_marginLeft="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50"/>
        <TextView
            android:id="@+id/pay_time_title"
            android:layout_below="@+id/pay_status_title"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pay_time"/>
        <TextView
            android:id="@+id/pay_time"
            android:layout_toRightOf="@+id/pay_time_title"
            android:layout_alignTop="@+id/pay_time_title"
            android:layout_marginLeft="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-12-23 08:11:44"
            android:textColor="@color/sh"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
