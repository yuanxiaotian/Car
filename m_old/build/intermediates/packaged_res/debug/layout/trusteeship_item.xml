<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foreground="?attr/selectableItemBackground">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <CheckBox
        android:id="@+id/odt_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:visibility="gone"
        style="@style/CustomCheckboxTheme" />
    <TextView
        android:id="@+id/odt_plates"
        android:layout_toRightOf="@+id/odt_checkbox"
        android:layout_toEndOf="@+id/odt_checkbox"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/odt_ownername"
        android:layout_toRightOf="@+id/odt_plates"
        android:layout_toEndOf="@+id/odt_plates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/odt_plates"
        tools:ignore="RelativeOverlap" />
    <TextView
        android:id="@+id/odt_it_data"
        android:layout_below="@+id/odt_plates"
        android:layout_alignLeft="@+id/odt_plates"
        android:layout_alignStart="@+id/odt_plates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/sh"
        android:text="@string/Maturity_date"/>
    <TextView
        android:id="@+id/odt_trstime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/sh"
        android:layout_toRightOf="@+id/odt_it_data"
        android:layout_toEndOf="@+id/odt_it_data"
        android:layout_alignTop="@+id/odt_it_data"/>
    <TextView
        android:id="@+id/odt_data_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/to"
        android:textColor="@color/sh"
        android:layout_toRightOf="@+id/odt_trstime"
        android:layout_toEndOf="@+id/odt_trstime"
        android:layout_alignTop="@+id/odt_trstime"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"/>
    <TextView
        android:id="@+id/odt_tretime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/sh"
        android:layout_toRightOf="@+id/odt_data_to"
        android:layout_toEndOf="@+id/odt_data_to"
        android:layout_alignTop="@+id/odt_data_to"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"/>

    <LinearLayout
        android:id="@+id/trusteeship_phones_layout"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:gravity="center"
        android:background="@drawable/click_effect"
        >
        <ImageView
            android:id="@+id/phones_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/phones"
            android:contentDescription="@string/image"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/trusteeship_msg_layout"
        android:layout_toLeftOf="@+id/trusteeship_phones_layout"
        android:layout_toStartOf="@+id/trusteeship_phones_layout"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/click_effect"
        >
        <ImageView
            android:id="@+id/msg_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/xiaoxis"
            android:contentDescription="@string/image"/>

    </LinearLayout>
</RelativeLayout>
</android.support.v7.widget.CardView>
