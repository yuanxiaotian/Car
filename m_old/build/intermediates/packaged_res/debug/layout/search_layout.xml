<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/light_blue"

        >
        <EditText
            android:id="@+id/search_et_input"
            android:layout_marginRight="60dp"
            android:layout_marginEnd="60dp"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:hint="@string/Please_enter_a_keyword"
            android:drawableLeft="@drawable/searchicon"
            android:drawableStart="@drawable/searchicon"
            android:textSize="15sp"
            android:background="@color/light_white_color"
            android:layout_gravity="center"
            android:imeOptions="actionSearch"
            android:inputType="text"
            />
        <ImageView
            android:id="@+id/search_iv_delete"
            android:layout_toRightOf="@+id/search_et_input"
            android:layout_toEndOf="@+id/search_et_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/search_clear"
            android:layout_marginLeft="-90dp"
            android:layout_marginStart="-90dp"
            android:visibility="gone"
            android:contentDescription="@string/image"
            />
        <TextView
            android:id="@+id/search_btn_back"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="@string/cancel"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:background="@drawable/click_effect"
            />
        <TextView
            android:id="@+id/sure_search"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="@string/search"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:background="@drawable/click_effect"
            android:visibility="gone"
            />
    </RelativeLayout>

    <ListView
        android:visibility="gone"
        android:id="@+id/search_lv_tips"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>
</LinearLayout>
