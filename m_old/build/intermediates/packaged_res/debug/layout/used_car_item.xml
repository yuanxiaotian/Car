<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <RelativeLayout
        android:id="@+id/Engine_model_icon_layout"
        android:layout_width="60dp"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/Engine_model_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:contentDescription="@string/image"
            android:src="@drawable/juxing_56"/>
        <TextView
            android:id="@+id/usedCar_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            />
    </RelativeLayout>




    <TextView
        android:id="@+id/used_car_plate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Engine_model_icon_layout"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/Engine_model_icon_layout"
        android:layout_toRightOf="@+id/Engine_model_icon_layout"
        android:textColor="@android:color/background_dark"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/Frame_number_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/used_car_plate"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/Engine_model_icon_layout"
        android:layout_toRightOf="@+id/Engine_model_icon_layout"
        android:text="@string/Frame_number"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/used_car_fm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Frame_number_title"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:layout_toEndOf="@+id/Frame_number_title"
        android:layout_toRightOf="@+id/Frame_number_title"
        android:textColor="@android:color/background_dark"
        android:textSize="14sp"
        />

    <ImageView
        android:id="@+id/newCar_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:contentDescription="@string/image"
        android:src="@drawable/shareblue"
        android:visibility="invisible"/>
</RelativeLayout>

</android.support.v7.widget.CardView>
