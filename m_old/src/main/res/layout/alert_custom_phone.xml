<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_w"
    android:orientation="vertical">

    <TextView
        android:id="@+id/phone_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:text="当前有效号码0条"
        android:textColor="@color/c_2c"
        android:textSize="@dimen/text_size" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/custom_phones_num"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        android:background="@drawable/shape_edit_view_box"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:padding="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="20dp">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/customPhone_check_btn"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_gravity="end"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_button"
            android:gravity="center"
            android:text="检查"
            android:textColor="#FFFFFF" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/sure_customPhone_btn"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_gravity="end"
            android:layout_marginLeft="20dp"
            android:background="@drawable/shape_button"
            android:gravity="center"
            android:text="确认"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</LinearLayout>
