<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/c_confirmtime_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            tools:ignore="RelativeOverlap" />

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/c_confirmtime_text"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sale" />

            <TextView
                android:id="@+id/c_salername_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginStart="3dp" />

            <TextView
                android:id="@+id/c_status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"

                android:textColor="#D3AD29" />
        </LinearLayout>

        <TextView
            android:id="@+id/ordernum_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/c_confirmtime_text"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="@string/Contract_number" />

        <TextView
            android:id="@+id/c_cnum_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/ordernum_title"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/ordernum_title"
            android:layout_toRightOf="@+id/ordernum_title" />

        <TextView
            android:id="@+id/client_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ordernum_title"
            android:layout_alignStart="@+id/ordernum_title"
            android:layout_below="@+id/ordernum_title"
            android:layout_marginTop="10dp"
            android:text="@string/Customer" />

        <TextView
            android:id="@+id/c_clientname_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/client_title"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/client_title"
            android:layout_toRightOf="@+id/client_title" />

        <TextView
            android:id="@+id/dealtype_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/client_title"
            android:layout_alignStart="@+id/client_title"
            android:layout_below="@+id/client_title"
            android:layout_marginTop="10dp"
            android:text="@string/Transaction_type" />

        <TextView
            android:id="@+id/c_dealtype_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/dealtype_title"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/dealtype_title"
            android:layout_toRightOf="@+id/dealtype_title" />

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/dealtype_title"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Transaction_price"
                android:textColor="@color/green" />

            <TextView
                android:id="@+id/c_dealprice_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:textColor="@color/green" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>

