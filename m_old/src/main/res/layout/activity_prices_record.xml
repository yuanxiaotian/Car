<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xuliucar.xuli.xuliucar.ui.homePage.illegalQuery.PricesRecord">
    <android.support.v7.widget.Toolbar
        android:id="@+id/illegal_detail_toolbar"
        android:layout_width="match_parent"
        android:background="@color/light_blue"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/back">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/price_difference_record"
            android:textColor="#fff"
            android:textSize="22sp"/>
    </android.support.v7.widget.Toolbar>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/price_record_listView"
            android:dividerHeight="2dip"
            android:background="@android:color/white"
            android:divider="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        </ListView>
        <LinearLayout
            android:id="@+id/price_record_tip_no"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/light_blue"
            android:gravity="center"
            android:visibility="gone"
            android:layout_gravity="top"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_data"
                android:textSize="16sp"
                android:textColor="@android:color/white"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/price_record_refresh_tip"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/light_blue"
            android:gravity="center"
            android:visibility="gone"
            android:layout_gravity="bottom"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_more_data"
                android:textSize="16sp"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
