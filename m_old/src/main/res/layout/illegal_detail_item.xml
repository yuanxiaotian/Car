<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardUseCompatPadding="true">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <CheckBox
        android:id="@+id/illegal_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"/>
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2dp"
        android:background="@color/dark_grey"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp">
        <TextView
            android:id="@+id/document_num_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/document_num"/>
        <TextView
            android:id="@+id/document_num"
            android:layout_toRightOf="@+id/document_num_title"
            android:layout_marginLeft="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="4406147904876663"/>

        <TextView
            android:id="@+id/place_of_violation_title"
            android:layout_below="@+id/document_num_title"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/place_of_violation"/>
        <TextView
            android:id="@+id/place_of_violation"
            android:layout_toRightOf="@+id/place_of_violation_title"
            android:layout_alignTop="@+id/place_of_violation_title"
            android:layout_marginLeft="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="佛山 2016-10-26 04：22：34"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/illegal_code_title"
            android:layout_below="@+id/place_of_violation_title"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/illegal_code"/>
        <TextView
            android:id="@+id/illegal_code"
            android:layout_toRightOf="@+id/illegal_code_title"
            android:layout_alignTop="@+id/illegal_code_title"
            android:layout_marginLeft="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1344"
            android:textColor="@android:color/black"/>
            <TextView
                android:layout_toRightOf="@+id/illegal_code"
                android:layout_alignTop="@+id/illegal_code"
                android:layout_marginLeft="5dp"
                android:id="@+id/fine_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fine"
                android:textColor="@android:color/holo_orange_dark"/>
        <TextView
            android:id="@+id/fine"
            android:layout_toRightOf="@+id/fine_title"
            android:layout_alignTop="@+id/fine_title"
            android:layout_marginLeft="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_orange_dark"
            android:text="200元"/>
        <TextView
            android:id="@+id/late_fee_title"
            android:layout_toRightOf="@+id/fine"
            android:layout_alignTop="@+id/fine"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/late_fee"
            android:textColor="@android:color/holo_orange_dark"/>
        <TextView
            android:id="@+id/late_fee"
            android:layout_toRightOf="@+id/late_fee_title"
            android:layout_alignTop="@+id/late_fee_title"
            android:layout_marginLeft="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20元"
            android:textColor="@android:color/holo_orange_dark"/>
        <TextView
            android:id="@+id/service_charge_title"
            android:layout_below="@+id/illegal_code_title"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/service_charge"/>
        <TextView
            android:id="@+id/service_charge"
            android:layout_toRightOf="@+id/service_charge_title"
            android:layout_alignTop="@+id/service_charge_title"
            android:layout_marginLeft="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="698.60"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/service_cost"
            android:visibility="invisible"
            android:layout_toRightOf="@+id/service_charge"
            android:layout_alignTop="@+id/service_charge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[698.60]"
            android:textColor="@android:color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/service_charge_title"
            android:layout_toLeftOf="@+id/total"
            android:layout_marginRight="2dp"
            android:text="@string/total"/>
        <TextView
            android:id="@+id/total"
            android:layout_alignTop="@+id/service_charge_title"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="698.900"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"/>
    </RelativeLayout>
</LinearLayout>
</android.support.v7.widget.CardView>
