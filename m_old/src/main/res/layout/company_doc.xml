<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/photograph_pager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_bg"
    android:orientation="vertical"
    tools:context=".ui.homePage.infoRegister.CarOwnerReg">

    <include layout="@layout/toolbar_view" />

    <LinearLayout
        android:id="@+id/company_line1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:baselineAligned="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/c_Organizational_institution"
            style="@style/Sketch_map_layout2">

            <ImageView
                android:id="@+id/c_Organizational_institution_img"
                style="@style/corner_imageView"
                android:contentDescription="@string/image" />

            <TextView
                style="@style/Sketch_map_text_tip"
                android:text="@string/Copy_of_the_organization_code_certificate" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/c_Local_tax"
            style="@style/Sketch_map_layout2">

            <ImageView
                android:id="@+id/c_Local_tax_img"
                style="@style/corner_imageView"
                android:contentDescription="@string/image" />

            <TextView
                style="@style/Sketch_map_text_tip"
                android:text="@string/Copy_photo_of_land_tax" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:baselineAligned="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/c_State_tax"
            style="@style/Sketch_map_layout2">

            <ImageView
                android:id="@+id/c_State_tax_img"
                style="@style/corner_imageView"
                android:contentDescription="@string/image" />

            <TextView
                style="@style/Sketch_map_text_tip"
                android:text="@string/Copy_photo_of_national_tax_certificate" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/c_Road_transport_permit"
            style="@style/Sketch_map_layout2">

            <ImageView
                android:id="@+id/c_Road_transport_permit_img"
                style="@style/corner_imageView"
                android:contentDescription="@string/image" />

            <TextView
                style="@style/Sketch_map_text_tip"
                android:text="@string/Copy_of_road_transport_permit" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/c_Road_transport_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="3dp"
            android:layout_marginStart="6dp"
            android:layout_weight="1"
            android:background="@drawable/corners_border"
            android:gravity="center"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="@drawable/click_effect">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/image" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/rounded_rectangle"
                    android:gravity="center"
                    android:textColor="@android:color/white" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
