<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto" >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/image"/>

    <RelativeLayout
        android:layout_marginTop="45dp"
        android:layout_width="match_parent"
        android:layout_height="50.5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/company_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/home"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"
            android:layout_centerVertical="true"
            android:contentDescription="@string/image"
            />

        <View
            android:id="@+id/company_line"
            android:layout_toRightOf="@+id/company_icon"
            android:layout_toEndOf="@+id/company_icon"
            android:layout_width="1dp"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:layout_height="match_parent"
            android:background="#4A8BF9"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            />
       <android.support.design.widget.TextInputLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_toRightOf="@+id/company_line"
           android:layout_toEndOf="@+id/company_line"
           android:hint="@string/please_input_company"
           android:textColorHint="@color/hintColor">

           <android.support.design.widget.TextInputEditText
               android:id="@+id/company_name"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="@null"
               android:maxLines="1"
               android:textColor="@color/grey"
               android:layout_marginLeft="5dp"
               android:layout_marginStart="5dp"
              />
       </android.support.design.widget.TextInputLayout>

        <ImageView
            android:id="@+id/company_name_operation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cuowu"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="24dp"
            android:layout_marginEnd="24dp"
            android:visibility="gone"
            android:contentDescription="@string/image"
            />
    </RelativeLayout>
    <View
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"/>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50.5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/username_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/name"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"
            android:layout_centerVertical="true"
            android:contentDescription="@string/image"
            />
        <View
            android:id="@+id/username_line"
            android:layout_width="1dp"
            android:layout_toRightOf="@+id/username_icon"
            android:layout_toEndOf="@+id/username_icon"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:layout_height="match_parent"
            android:background="#4A8BF9"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            />
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/username_line"
            android:layout_toEndOf="@+id/username_line"
            android:hint="@string/input_username"
            android:textColorHint="@color/hintColor">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:maxLines="1"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:textColor="@color/grey"
                />
        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:id="@+id/username_operation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cuowu"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="24dp"
            android:layout_marginEnd="24dp"
            android:visibility="gone"
            android:contentDescription="@string/image"
            />
    </RelativeLayout>
    <View
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"/>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50.5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/password_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mima_icon"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"
            android:layout_centerVertical="true"
            android:contentDescription="@string/image"
            />
        <View
            android:id="@+id/password_line"
            android:layout_toRightOf="@+id/password_icon"
            android:layout_toEndOf="@+id/password_icon"
            android:layout_width="1dp"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:layout_height="match_parent"
            android:background="#4A8BF9"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            />
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/password_line"
            android:layout_toEndOf="@+id/password_line"
            android:hint="@string/input_password"
            android:textColorHint="@color/hintColor"
            app:passwordToggleEnabled="false">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:maxLines="1"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:textColor="@color/grey"
                android:inputType="textPassword"/>

        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:id="@+id/password_operation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cuowu"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="24dp"
            android:layout_marginEnd="24dp"
            android:visibility="gone"
            android:contentDescription="@string/image"
            />
    </RelativeLayout>
    <View
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"/>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp">
        <CheckBox
            android:id="@+id/autoLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:text="@string/auto_login"/>
    </LinearLayout>


        <Button
            android:id="@+id/login"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:textColor="#fff"
            android:textSize="24sp"
            android:background="@drawable/btn_corner_selector"
            android:layout_marginRight="8.5dp"
            android:layout_marginLeft="8.5dp"
            />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >

            <Button
                android:id="@+id/cannot_login"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="@string/not_login"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/text_selector"
                android:textColor="@color/grey"
                android:visibility="gone"/>

        <Button
            android:id="@+id/register"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="@string/reg"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/text_selector"
            android:textColor="#5589f8"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="14dp"
            />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
