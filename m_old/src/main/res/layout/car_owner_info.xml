<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/content_bg"
            tools:context=".ui.homePage.allCar.CarOwnerInfo"
            tools:ignore="Overdraw">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">

       <LinearLayout style="@style/a_line_style">
           <TextView
                style="@style/a_line_style_text_light"
               android:text="@string/car_owner_name" />
           <TextView
               android:id="@+id/car_owner_name"
               style="@style/a_line_style_text_light2" />
       </LinearLayout>
       <View
           android:layout_marginLeft="10dp"
           android:layout_marginStart="10dp"
          style="@style/line" />
       <LinearLayout style="@style/a_line_style">
           <TextView
              style="@style/a_line_style_text_light"
               android:text="@string/sex" />
           <TextView
               android:id="@+id/carOwner_sex"
               style="@style/a_line_style_text_light2"
               />
       </LinearLayout>
       <View
           android:layout_marginLeft="10dp"
           android:layout_marginStart="10dp"
          style="@style/line"/>
       <LinearLayout style="@style/a_line_style">
           <TextView
             style="@style/a_line_style_text_light"
               android:text="@string/id_card" />
           <TextView
                android:id="@+id/carOwner_id_card"
              style="@style/a_line_style_text_light2"
               />
       </LinearLayout>
       <View
           android:layout_marginLeft="10dp"
           android:layout_marginStart="10dp"
           style="@style/line"/>
       <LinearLayout style="@style/a_line_style">
           <TextView
              style="@style/a_line_style_text_light"
               android:text="@string/carOwner_phone_one"
               />
           <TextView
               android:id="@+id/carOwner_phone_one"
             style="@style/a_line_style_text_light2"
               />
       </LinearLayout>
       <View
           android:layout_marginLeft="10dp"
           android:layout_marginStart="10dp"
          style="@style/line"/>
       <LinearLayout style="@style/a_line_style">
           <TextView
               style="@style/a_line_style_text_light"
               android:text="@string/carOwner_phone_two"
               />
           <TextView
               android:id="@+id/carOwner_phone_two"
               style="@style/a_line_style_text_light2"
               />
       </LinearLayout>
       <View
           android:layout_marginLeft="10dp"
           android:layout_marginStart="10dp"
           style="@style/line"/>
       <LinearLayout style="@style/a_line_style">
       <TextView
          style="@style/a_line_style_text_light"
           android:text="@string/carOwner_card_address"
           />
       <TextView
           android:id="@+id/carOwner_card_address"
          style="@style/a_line_style_text_light2"
           />
   </LinearLayout>
       <View
           android:layout_marginLeft="10dp"
           android:layout_marginStart="10dp"
          style="@style/line"/>

       <LinearLayout style="@style/a_line_style">
           <TextView
              style="@style/a_line_style_text_light"
               android:text="@string/carOwner_card_nowAdd"
               />
           <TextView
               android:id="@+id/carOwner_card_nowAdd"
              style="@style/a_line_style_text_light2"
               />
       </LinearLayout>
       <View
           android:layout_width="match_parent"
          style="@style/line"/>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="350dp"
           android:orientation="vertical">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/carOwner_photo"
               android:textColor="@color/font_light_gery"
               android:textSize="16sp"
               android:layout_margin="10dp"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="140dp"
               android:orientation="horizontal">

               <RelativeLayout
                   android:id="@+id/cz_idcart_z"
                   style="@style/Sketch_map_layout2">
                       <ImageView
                           android:id="@+id/cz_idcart_z_img"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:src="@drawable/add_default_photo"
                           android:scaleType="fitXY"
                           android:contentDescription="@string/image"/>
                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="25dp"
                           android:layout_alignParentBottom="true"
                           android:background="@drawable/rounded_rectangle"
                           android:gravity="center"
                           android:text="@string/Positive_identity_card"
                           android:textColor="@android:color/white" />
               </RelativeLayout>

               <RelativeLayout
                   android:id="@+id/cz_idcart_f"
                   style="@style/Sketch_map_layout2">
                       <ImageView
                           android:id="@+id/cz_idcart_f_img"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:src="@drawable/add_default_photo"
                           android:scaleType="fitXY"
                           android:contentDescription="@string/image"/>
                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="25dp"
                           android:layout_alignParentBottom="true"
                           android:background="@drawable/rounded_rectangle"
                           android:gravity="center"
                           android:text="@string/opposite_idCard"
                           android:textColor="@android:color/white" />
               </RelativeLayout>
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="140dp"
               android:orientation="horizontal">
               <RelativeLayout
                   android:id="@+id/cz_Temporary_residence_permit"
                   style="@style/Sketch_map_layout2">
                       <ImageView
                           android:id="@+id/cz_Temporary_residence_permit_img"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:src="@drawable/add_default_photo"
                           android:scaleType="fitXY"
                           android:contentDescription="@string/image"/>
                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="25dp"
                           android:layout_alignParentBottom="true"
                           android:background="@drawable/rounded_rectangle"
                           android:gravity="center"
                           android:text="@string/Temp_residence_permit"
                           android:textColor="@android:color/white" />
               </RelativeLayout>

               <RelativeLayout
                   android:id="@+id/Temp_residence_permit_opposite"
                   style="@style/Sketch_map_layout2">
                       <ImageView
                           android:id="@+id/Temp_residence_permit_opposite_img"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:src="@drawable/add_default_photo"
                           android:scaleType="fitXY"
                           android:contentDescription="@string/image"/>
                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="25dp"
                           android:layout_alignParentBottom="true"
                           android:background="@drawable/rounded_rectangle"
                           android:gravity="center"
                           android:text="@string/Temp_residence_permit_opposite"
                           android:textColor="@android:color/white" />
               </RelativeLayout>
           </LinearLayout>
       </LinearLayout>
   </LinearLayout>

</ScrollView>
