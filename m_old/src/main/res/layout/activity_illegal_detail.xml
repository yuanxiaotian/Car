<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xuliucar.xuli.xuliucar.ui.homePage.illegalQuery.IllegalDetail">
    <android.support.v7.widget.Toolbar
        android:id="@+id/illegal_detail_toolbar"
        android:layout_width="match_parent"
        android:background="@color/light_blue"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/back">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/illegal_detail"
            android:textColor="#fff"
            android:textSize="22sp"/>
    </android.support.v7.widget.Toolbar>

    <ListView
        android:id="@+id/illegal_detail_listView"
        android:layout_below="@+id/illegal_detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:divider="@null"
        android:layout_marginBottom="40dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/light_white_color"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/illegal_select_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/illegal_select_all"
            android:layout_centerVertical="true"
            android:text="@string/Select_all"/>
        <Button
            android:id="@+id/handle_illegal_layout"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/tj_border"
            android:text="@string/handle_select_illegal"
            android:textColor="#FFFFFF"/>
    </RelativeLayout>
</RelativeLayout>
