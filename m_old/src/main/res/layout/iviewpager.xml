<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="150dp"
      >
        <TextView
            android:id="@+id/s_indemnity_norm_title"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Compensation_limit"
            />
        <TextView
            android:id="@+id/s_indemnity_norm"
            android:layout_alignTop="@+id/s_indemnity_norm_title"
            android:layout_toRightOf="@+id/s_indemnity_norm_title"
            android:layout_toEndOf="@+id/s_indemnity_norm_title"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/s_abatement_title"
            android:layout_below="@+id/s_indemnity_norm_title"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Free_from_loss"/>
        <TextView
            android:id="@+id/s_abatement"
            android:layout_toRightOf="@+id/s_abatement_title"
            android:layout_toEndOf="@+id/s_abatement_title"
            android:layout_alignTop="@+id/s_abatement_title"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/s_base_title"
            android:layout_below="@+id/s_abatement_title"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Benchmark_premium"/>
        <TextView
            android:id="@+id/s_base"
            android:layout_toRightOf="@+id/s_base_title"
            android:layout_toEndOf="@+id/s_base_title"
            android:layout_alignTop="@+id/s_base_title"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/s_coefficient_title"
            android:layout_below="@+id/s_base_title"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="@string/coefficient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/s_coefficient"
            android:layout_toRightOf="@+id/s_coefficient_title"
            android:layout_toEndOf="@+id/s_coefficient_title"
            android:layout_alignTop="@+id/s_coefficient_title"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/s_total_title"
            android:layout_below="@+id/s_coefficient_title"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="@string/Subtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/s_total"
            android:layout_toRightOf="@+id/s_total_title"
            android:layout_toEndOf="@+id/s_total_title"
            android:layout_alignTop="@+id/s_total_title"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

