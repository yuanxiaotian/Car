<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/content_bg"
              android:orientation="vertical"
              tools:context=".ui.homePage.allCar.CarInfo"
              tools:ignore="Overdraw">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/car_info_header"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/content_bg"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:paddingRight="0dp"
                android:paddingEnd="0dp"
               >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Construction_waste" />
            </LinearLayout>
            <include layout="@layout/car_info_middle"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="890dp"
                android:background="@color/content_bg"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/Document_information"
                    android:textColor="@color/font_light_gery"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:baselineAligned="true"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/cp_p1_thumb"
                        style="@style/Sketch_map_layout2">
                        <ImageView
                            android:id="@+id/cp_p1_thumb_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/add_default_photo"
                            android:contentDescription="@string/image"
                             />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/rounded_rectangle"
                            android:gravity="center"
                            android:text="@string/Driving_license_original"
                            android:textColor="@android:color/white" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/cp_p1_thumb_F"
                        style="@style/Sketch_map_layout2">
                        <ImageView
                            android:id="@+id/cp_p1_thumb_img_F"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/add_default_photo"
                            android:contentDescription="@string/image"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/rounded_rectangle"
                            android:gravity="center"
                            android:text="@string/Driving_license_original_opposite"
                            android:textColor="@android:color/white" />

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:baselineAligned="true"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:id="@+id/cp_p2_thumb"
                        style="@style/Sketch_map_layout2">
                        <ImageView
                            android:id="@+id/cp_p2_thumb_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:contentDescription="@string/image"
                            android:src="@drawable/add_default_photo"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/rounded_rectangle"
                            android:gravity="center"
                            android:text="@string/Copy_of_driving_license"
                            android:textColor="@android:color/white" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/cp_p2_thumb_F"
                        style="@style/Sketch_map_layout2">
                        <ImageView
                            android:contentDescription="@string/image"
                            android:id="@+id/cp_p2_thumb_img_F"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/add_default_photo"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/rounded_rectangle"
                            android:gravity="center"
                            android:text="@string/Copy_of_driving_license_opposite"
                            android:textColor="@android:color/white" />

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:baselineAligned="true"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/cp_p3_thumb"
                        style="@style/Sketch_map_layout2">
                        <ImageView
                            android:contentDescription="@string/image"
                            android:id="@+id/cp_p3_thumb_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/add_default_photo"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/rounded_rectangle"
                            android:gravity="center"
                            android:text="@string/Motor_vehicle_registration"
                            android:textColor="@android:color/white" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/cp_p3_thumb_m"
                        style="@style/Sketch_map_layout2">
                        <ImageView
                            android:contentDescription="@string/image"
                            android:id="@+id/cp_p3_thumb_img_m"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/add_default_photo"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/rounded_rectangle"
                            android:gravity="center"
                            android:text="@string/Motor_vehicle_registration_move"
                            android:textColor="@android:color/white" />

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:baselineAligned="true"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/cp_p2_thumb_h"
                        style="@style/Sketch_map_layout2">

                        <ImageView
                            android:id="@+id/cp_p2_thumb_img_h"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/add_default_photo"
                            android:contentDescription="@string/image"
                             />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/rounded_rectangle"
                            android:gravity="center"
                            android:text="@string/Certificate_of_motor_vehicle"
                            android:textColor="@android:color/white" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/cp_p4_thumb"
                        style="@style/Sketch_map_layout2">

                        <ImageView
                            android:id="@+id/cp_p4_thumb_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/add_default_photo"
                            android:contentDescription="@string/image"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/rounded_rectangle"
                            android:gravity="center"
                            android:text="@string/Buy_and_send_tickets"
                            android:textColor="@android:color/white" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:baselineAligned="true"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/cp_p5_thumb"
                        style="@style/Sketch_map_layout2">

                        <ImageView
                            android:id="@+id/cp_p5_thumb_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/add_default_photo"
                            android:contentDescription="@string/image"
                             />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/rounded_rectangle"
                            android:gravity="center"
                            android:text="@string/Tax_payment_certificate"
                            android:textColor="@android:color/white" />
                    </RelativeLayout>


                    <RelativeLayout
                       android:id="@+id/md_Construction_waste_positive"
                        style="@style/Sketch_map_layout2">

                        <ImageView
                            android:id="@+id/md_Construction_waste_positive_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/add_default_photo"
                            android:contentDescription="@string/image"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/rounded_rectangle"
                            android:gravity="center"
                            android:text="@string/Construction_waste_positive"
                            android:textColor="@android:color/white" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:baselineAligned="true"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/md_Construction_waste_opposite"
                        style="@style/Sketch_map_layout2">

                        <ImageView
                            android:id="@+id/md_Construction_waste_opposite_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/add_default_photo"
                            android:contentDescription="@string/image"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/rounded_rectangle"
                            android:gravity="center"
                            android:text="@string/Construction_waste_opposite"
                            android:textColor="@android:color/white" />
                    </RelativeLayout>


                    <RelativeLayout
                       android:visibility="invisible"
                        style="@style/Sketch_map_layout2">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/add_default_photo"
                            android:contentDescription="@string/image"
                             />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/rounded_rectangle"
                            android:gravity="center"
                            android:text="@string/Construction_waste_positive"
                            android:textColor="@android:color/white" />
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
