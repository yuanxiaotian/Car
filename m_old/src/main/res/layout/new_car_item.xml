<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <RelativeLayout
        android:id="@+id/Engine_model_icon_layout"
        android:layout_width="60dp"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/Engine_model_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/juxing_56"
           android:layout_centerInParent="true"
            android:contentDescription="@string/image"/>
        <TextView
            android:id="@+id/newCar_index"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:id="@+id/Engine_model_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginTop="7dp"
        android:text="@string/Engine_model"
        android:layout_alignTop="@+id/Engine_model_icon_layout"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@+id/Engine_model_icon_layout"
        android:layout_toEndOf="@+id/Engine_model_icon_layout"/>
    <TextView
        android:id="@+id/Engine_model"
        android:layout_toRightOf="@id/Engine_model_title"
        android:layout_toEndOf="@+id/Engine_model_title"
        android:layout_alignTop="@+id/Engine_model_title"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@android:color/background_dark"

        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/Frame_number_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Frame_number"
        android:textSize="14sp"
        android:layout_below="@+id/Engine_model_title"
        android:layout_alignRight="@+id/Engine_model_title"
        android:layout_alignEnd="@+id/Engine_model_title"/>
    <TextView
        android:id="@+id/Frame_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@android:color/background_dark"
        android:layout_toRightOf="@+id/Frame_number_title"
        android:layout_toEndOf="@+id/Frame_number_title"
        android:layout_alignTop="@+id/Frame_number_title"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"/>
    <ImageView
        android:visibility="invisible"
        android:id="@+id/newCar_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/shareblue"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:contentDescription="@string/image"/>
</RelativeLayout>

</android.support.v7.widget.CardView>
