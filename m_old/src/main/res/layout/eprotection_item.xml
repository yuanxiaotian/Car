<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foreground="?attr/selectableItemBackground"
   >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <CheckBox
            android:id="@+id/hb_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:visibility="gone"
            style="@style/CustomCheckboxTheme" />
        <TextView
            android:layout_toRightOf="@+id/hb_checkbox"
            android:layout_toEndOf="@+id/hb_checkbox"
            android:id="@+id/hb_plates"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/background_dark"/>
        <TextView
            android:id="@+id/hb_phone_title"
            android:layout_toRightOf="@+id/hb_plates"
            android:layout_toEndOf="@+id/hb_plates"
            android:layout_alignTop="@+id/hb_plates"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/hb_phone"
            android:layout_toRightOf="@+id/hb_phone_title"
            android:layout_toEndOf="@+id/hb_phone_title"
            android:layout_alignTop="@+id/hb_phone_title"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textColor="@android:color/background_dark"/>
        <TextView
            android:id="@+id/hb_chketime_title"
            android:layout_below="@+id/hb_plates"
            android:layout_alignLeft="@+id/hb_plates"
            android:layout_alignStart="@+id/hb_plates"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Maturity_date"
            android:textColor="@color/sh"/>
        <TextView
            android:id="@+id/hb_chketime"
            android:layout_toRightOf="@+id/hb_chketime_title"
            android:layout_toEndOf="@+id/hb_chketime_title"
            android:layout_alignTop="@+id/hb_chketime_title"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/sh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/hb_phones_layout"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:background="@drawable/click_effect"
            >
            <ImageView
                android:id="@+id/phones_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/phones"
                android:contentDescription="@string/image"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/hb_msg_layout"
            android:layout_toLeftOf="@+id/hb_phones_layout"
            android:layout_toStartOf="@+id/hb_phones_layout"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/click_effect"
            >
            <ImageView
                android:id="@+id/msg_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/xiaoxis"
                android:contentDescription="@string/image"/>

        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>

